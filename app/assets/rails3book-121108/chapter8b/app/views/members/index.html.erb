<% @page_title = "会員名簿" %>

<h1><%= @page_title %></h1>

<%= form_tag :search_members, method: :get do %>
<p><%= text_field_tag "q", params[:q] %>
<%= submit_tag "検索" %></p>
<% end %>

<% if @members.present? %>
<table class="list">
  <tr>
    <th>背番号</th>
    <th>ニックネーム</th>
    <th>氏名</th>
  </tr>
  <% @members.each do |member| %>
  <tr>
    <td align="right"><%= member.number %></td>
    <td><%= link_to member.name, member %></td>
    <td><%= member.full_name %></td>
  </tr>
  <% end %>
</table>
<% else %>
<p>会員情報がありません。</p>
<% end %>
