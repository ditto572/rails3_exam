<% @page_title =
     @member ? @member.name + "さんのブログ" : "会員のブログ" %>
<h1><%= @page_title %></h1>

<% if @current_member && @current_member == @member %>
<p><%= link_to "ブログ記事の作成", :new_entry %> |
<%= link_to "投票した記事", :voted_entries %></p>
<% end %>

<% if @entries.present? %>
  <% @entries.each do |entry| %>
<h2><%= entry.title %></h2>
<p><%= truncate(entry.body, length: 80) %>
<%= link_to "もっと読む", entry %></p>
<%= render "footer", entry: entry %>
  <% end %>
<%= will_paginate @entries %>

<% else %>
<p>記事がありません。</p>
<% end %>
